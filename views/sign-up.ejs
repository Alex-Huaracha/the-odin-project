<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      .errors {
        list-style: none;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #a83232;
        background: #f7d4d4;
        color: #a83232;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome! Please sign up to continue.</p>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

    <form action="/sign-up" method="POST">
      <div>
        <label for="firstName">First Name:</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          required
          value="<%= (typeof body !== 'undefined') ? body.firstName : '' %>"
        />
      </div>

      <div>
        <label for="lastName">Last Name:</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          required
          value="<%= (typeof body !== 'undefined') ? body.lastName : '' %>"
        />
      </div>

      <div>
        <label for="email">Email (username):</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          value="<%= (typeof body !== 'undefined') ? body.email : '' %>"
        />
      </div>

      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />
      </div>

      <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          required
        />
      </div>

      <button type="submit">Sign Up</button>
    </form>
  </body>
</html>
