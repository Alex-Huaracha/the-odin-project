<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <style>
      /* Estilos r√°pidos para que los errores se vean claros */
      .errors {
        list-style: none;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #a83232;
        background: #f7d4d4;
        color: #a83232;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

    <form action="/create-message" method="POST">
      <div>
        <label for="title">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          value="<%= (typeof body !== 'undefined') ? body.title : '' %>"
        />
      </div>

      <div>
        <label for="text">Message:</label>
        <textarea id="text" name="text" rows="5" required>
<%= (typeof body !== 'undefined') ? body.text : '' %></textarea
        >
      </div>

      <button type="submit">Post Message</button>
    </form>
  </body>
</html>
