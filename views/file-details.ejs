<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Details: <%= file.name %></title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/variables.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/components.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container nav-content">
        <div class="nav-brand">üìÅ File Uploader</div>
        <div class="nav-links">
          <a href="/dashboard" class="nav-link">‚Üê Back to Dashboard</a>
          <span class="nav-link">üë§ <%= user.username %></span>
          <form action="/logout" method="POST" style="display: inline">
            <button type="submit" class="btn btn-secondary btn-sm">
              Log Out
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container container-sm">
      <!-- Breadcrumb -->
      <div class="breadcrumb">
        <div class="breadcrumb-item">
          <a href="/dashboard" class="breadcrumb-link">My Drive</a>
        </div>
        <span class="breadcrumb-separator">/</span>
        <div class="breadcrumb-item">
          <span><%= file.name %></span>
        </div>
      </div>

      <!-- File Header -->
      <div class="page-header">
        <div style="display: flex; align-items: center; gap: 1rem">
          <div style="font-size: 3rem">
            <% if (file.mimetype.startsWith('image/')) { %> üñºÔ∏è <% } else if
            (file.mimetype.startsWith('video/')) { %> üé• <% } else if
            (file.mimetype.includes('pdf')) { %> üìï <% } else if
            (file.mimetype.includes('zip') || file.mimetype.includes('rar')) {
            %> üì¶ <% } else { %> üìÑ <% } %>
          </div>
          <div>
            <h1 class="page-title" style="margin-bottom: 0.25rem">
              <%= file.name %>
            </h1>
            <p class="page-subtitle">File Details</p>
          </div>
        </div>
      </div>

      <!-- File Preview (for images) -->
      <% if (file.mimetype.startsWith('image/')) { %>
      <div
        class="card"
        style="margin-bottom: 2rem; padding: 0; overflow: hidden"
      >
        <img
          src="<%= file.url %>"
          alt="<%= file.name %>"
          style="width: 100%; height: auto; display: block"
        />
      </div>
      <% } %>

      <!-- File Information Card -->
      <div class="card" style="margin-bottom: 2rem">
        <div class="card-header">
          <h2 class="card-title">File Information</h2>
          <button
            onclick="toggleModal('renameModal')"
            class="btn btn-secondary btn-sm"
          >
            ‚úèÔ∏è Rename
          </button>
        </div>
        <div class="card-body">
          <table class="table" style="margin: 0">
            <tbody>
              <tr>
                <td
                  style="
                    font-weight: 600;
                    width: 40%;
                    color: var(--text-secondary);
                  "
                >
                  File ID
                </td>
                <td style="font-family: var(--font-mono); font-size: 0.875rem">
                  <%= file.id %>
                </td>
              </tr>
              <tr>
                <td style="font-weight: 600; color: var(--text-secondary)">
                  File Type
                </td>
                <td><%= file.mimetype %></td>
              </tr>
              <tr>
                <td style="font-weight: 600; color: var(--text-secondary)">
                  File Size
                </td>
                <td>
                  <%= (file.size / 1024).toFixed(2) %> KB (<%= file.size %>
                  bytes)
                </td>
              </tr>
              <tr>
                <td style="font-weight: 600; color: var(--text-secondary)">
                  Uploaded
                </td>
                <td><%= file.createdAt.toLocaleString() %></td>
              </tr>
              <tr>
                <td style="font-weight: 600; color: var(--text-secondary)">
                  Storage ID
                </td>
                <td style="font-family: var(--font-mono); font-size: 0.875rem">
                  <%= file.storageId %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Actions Card -->
      <div class="card" style="margin-bottom: 2rem">
        <div class="card-header">
          <h2 class="card-title">Actions</h2>
        </div>
        <div class="card-footer" style="margin: 0; padding: 0; border: none">
          <a
            href="/files/<%= file.id %>/download"
            class="btn btn-success"
            style="flex: 1"
          >
            ‚¨áÔ∏è Download File
          </a>
          <a
            href="<%= file.url %>"
            target="_blank"
            class="btn btn-secondary"
            style="flex: 1"
          >
            üëÅÔ∏è View Original
          </a>
        </div>
      </div>

      <!-- Danger Zone -->
      <div
        class="card"
        style="
          border-color: var(--accent-danger);
          background-color: rgba(239, 68, 68, 0.05);
        "
      >
        <div class="card-header">
          <h3 style="color: var(--accent-danger); font-size: 1.125rem">
            ‚ö†Ô∏è Danger Zone
          </h3>
        </div>
        <div class="card-body">
          <p style="margin-bottom: 1rem">
            Delete this file permanently. This action cannot be undone.
          </p>
          <button onclick="confirmDelete()" class="btn btn-danger">
            üóëÔ∏è Delete File
          </button>
        </div>
      </div>
    </div>

    <!-- Rename File Modal -->
    <div id="renameModal" class="modal-overlay" style="display: none">
      <div class="modal">
        <div class="modal-header">
          <h3 class="modal-title">Rename File</h3>
        </div>
        <form action="/files/<%= file.id %>/update" method="POST">
          <div class="form-group">
            <label for="newName" class="form-label">New File Name</label>
            <input
              type="text"
              id="newName"
              name="newName"
              class="form-input"
              value="<%= file.name.replace(/\.[^/.]+$/, '') %>"
              required
              autofocus
            />
            <p
              style="
                margin-top: 0.5rem;
                font-size: 0.8125rem;
                color: var(--text-muted);
              "
            >
              File extension will be preserved automatically
            </p>
          </div>
          <div style="display: flex; gap: 0.75rem">
            <button type="submit" class="btn btn-primary" style="flex: 1">
              Rename
            </button>
            <button
              type="button"
              onclick="toggleModal('renameModal')"
              class="btn btn-secondary"
              style="flex: 1"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Delete Confirmation Form (hidden) -->
    <form
      id="deleteForm"
      action="/files/<%= file.id %>/delete"
      method="POST"
      style="display: none"
    ></form>

    <script>
      function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal.style.display === 'none') {
          modal.style.display = 'flex';
        } else {
          modal.style.display = 'none';
        }
      }

      function confirmDelete() {
        if (
          confirm(
            'Are you sure you want to delete this file?\n\nThis action cannot be undone.'
          )
        ) {
          document.getElementById('deleteForm').submit();
        }
      }

      // Close modal when clicking outside
      document.querySelectorAll('.modal-overlay').forEach((overlay) => {
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) {
            overlay.style.display = 'none';
          }
        });
      });

      // Close modal with ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          document.querySelectorAll('.modal-overlay').forEach((overlay) => {
            overlay.style.display = 'none';
          });
        }
      });
    </script>
  </body>
</html>
