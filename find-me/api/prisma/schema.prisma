generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Level {
  id         Int         @id @default(autoincrement())
  name       String
  characters Character[]
  scores     Score[]
}

model Character {
  id   Int    @id @default(autoincrement())
  name String

  minX Float
  maxX Float
  minY Float
  maxY Float

  level   Level @relation(fields: [levelId], references: [id])
  levelId Int
}

model Score {
  id       Int      @id @default(autoincrement())
  username String
  time     Int
  date     DateTime @default(now())

  level   Level @relation(fields: [levelId], references: [id])
  levelId Int
}
