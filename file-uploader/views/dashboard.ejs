<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - File Uploader</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/variables.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/components.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container nav-content">
        <div class="nav-brand">ğŸ“ File Uploader</div>
        <div class="nav-links">
          <span class="nav-link">ğŸ‘¤ <%= user.username %></span>
          <form action="/logout" method="POST" style="display: inline">
            <button type="submit" class="btn btn-secondary btn-sm">
              Log Out
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
      <!-- Flash Messages -->
      <div class="flash-messages">
        <% if (success_msg) { %>
        <div class="alert alert-success"><%= success_msg %></div>
        <% } %> <% if (error_msg) { %>
        <div class="alert alert-error"><%= error_msg %></div>
        <% } %>
      </div>

      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title">My Drive</h1>
        <p class="page-subtitle">Manage your files and folders</p>
      </div>

      <!-- Action Buttons -->
      <div
        style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: wrap"
      >
        <button onclick="toggleModal('folderModal')" class="btn btn-primary">
          ğŸ“ New Folder
        </button>
        <button onclick="toggleModal('uploadModal')" class="btn btn-secondary">
          ğŸ“¤ Upload File
        </button>
      </div>

      <!-- Folders Section -->
      <section style="margin-bottom: 3rem">
        <h2
          style="
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
          "
        >
          ğŸ“‚ Folders
        </h2>

        <% if (folders.length > 0) { %>
        <div class="grid grid-2">
          <% folders.forEach(folder => { %>
          <div class="folder-item">
            <div class="item-icon">ğŸ“</div>
            <div class="item-info">
              <div class="item-name">
                <a
                  href="/folders/<%= folder.id %>"
                  style="color: var(--text-primary)"
                >
                  <%= folder.name %>
                </a>
              </div>
              <div class="item-meta">
                Created <%= folder.createdAt.toLocaleDateString() %>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">ğŸ“</div>
          <p class="empty-state-text">No folders yet</p>
          <button onclick="toggleModal('folderModal')" class="btn btn-primary">
            Create Your First Folder
          </button>
        </div>
        <% } %>
      </section>

      <!-- Files Section -->
      <section>
        <h2
          style="
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
          "
        >
          ğŸ“„ Recent Files
        </h2>

        <% if (files.length > 0) { %>
        <div class="grid grid-2">
          <% files.forEach(file => { %>
          <div class="file-item">
            <div class="item-icon">
              <% if (file.mimetype.startsWith('image/')) { %> ğŸ–¼ï¸ <% } else if
              (file.mimetype.startsWith('video/')) { %> ğŸ¥ <% } else if
              (file.mimetype.includes('pdf')) { %> ğŸ“• <% } else if
              (file.mimetype.includes('zip') || file.mimetype.includes('rar')) {
              %> ğŸ“¦ <% } else { %> ğŸ“„ <% } %>
            </div>
            <div class="item-info">
              <div class="item-name">
                <a
                  href="/files/<%= file.id %>"
                  style="color: var(--text-primary)"
                >
                  <%= file.name %>
                </a>
              </div>
              <div class="item-meta">
                <%= (file.size / 1024).toFixed(2) %> KB â€¢ <%= file.mimetype %>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">ğŸ“„</div>
          <p class="empty-state-text">No files uploaded yet</p>
          <button onclick="toggleModal('uploadModal')" class="btn btn-primary">
            Upload Your First File
          </button>
        </div>
        <% } %>
      </section>
    </div>

    <!-- Create Folder Modal -->
    <div id="folderModal" class="modal-overlay" style="display: none">
      <div class="modal">
        <div class="modal-header">
          <h3 class="modal-title">Create New Folder</h3>
        </div>
        <form action="/folders" method="POST">
          <div class="form-group">
            <label for="folderName" class="form-label">Folder Name</label>
            <input
              type="text"
              id="folderName"
              name="folderName"
              class="form-input"
              placeholder="My Documents"
              required
              autofocus
            />
          </div>
          <div style="display: flex; gap: 0.75rem">
            <button type="submit" class="btn btn-primary" style="flex: 1">
              Create
            </button>
            <button
              type="button"
              onclick="toggleModal('folderModal')"
              class="btn btn-secondary"
              style="flex: 1"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Upload File Modal -->
    <div id="uploadModal" class="modal-overlay" style="display: none">
      <div class="modal">
        <div class="modal-header">
          <h3 class="modal-title">Upload File</h3>
        </div>
        <form
          action="/files/upload"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="file" class="form-label">Choose File</label>
            <input
              type="file"
              id="file"
              name="file"
              class="form-input"
              required
              style="padding: 0.5rem"
            />
            <p
              style="
                margin-top: 0.5rem;
                font-size: 0.8125rem;
                color: var(--text-muted);
              "
            >
              Maximum file size: 10MB
            </p>
          </div>
          <div style="display: flex; gap: 0.75rem">
            <button type="submit" class="btn btn-primary" style="flex: 1">
              Upload
            </button>
            <button
              type="button"
              onclick="toggleModal('uploadModal')"
              class="btn btn-secondary"
              style="flex: 1"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      function toggleModal(modalId) {
        const modal = document.getElementById(modalId);
        if (modal.style.display === 'none') {
          modal.style.display = 'flex';
        } else {
          modal.style.display = 'none';
        }
      }

      // Close modal when clicking outside
      document.querySelectorAll('.modal-overlay').forEach((overlay) => {
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) {
            overlay.style.display = 'none';
          }
        });
      });

      // Close modal with ESC key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          document.querySelectorAll('.modal-overlay').forEach((overlay) => {
            overlay.style.display = 'none';
          });
        }
      });
    </script>
  </body>
</html>
